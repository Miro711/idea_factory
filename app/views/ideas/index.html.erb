
<div class="container-fluid">
<div class="col">
  <% @ideas.each do |idea| %>
  <div class="py-2">
    <div class="card h-100">
      <div class="card-body">
        <i class="fa fa-plus-square-o"></i>
        <h5 class="card-title"><%= link_to idea.title, idea_path(idea.id), class:"text-primary" %></h5>
        <p> <%= idea.description %> </p>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>