<h1 class="mx-3">New Idea</h1>

<%= form_with model: @idea, local: true, class: "mx-3 my-2 p-1 clearfix" do |f| %>
  <% if @idea.errors.any? %>
  <ul>
    <% @idea.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, cols: 50, rows: 5, class:"form-control" %>
  </div>
  <%= f.submit"Create Idea", :class => "btn btn-outline-primary float-right" %>
<% end %>