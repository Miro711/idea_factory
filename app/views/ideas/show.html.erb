
<h1><%= @idea.title %></h1>
<p>Description: <%= @idea.description %></p>

<%= link_to "Edit Idea", edit_idea_path(@idea) %> |
<%= link_to "Delete Idea", idea_path(@idea), method: :delete, data: { confirm: 'Are you sure that you want to delete this idea?' } %>

<h3>Reviews</h3>
<% @reviews.each do |review| %>
  <div>
    <p><%= review.body %></p>
  </div>
<% end %>